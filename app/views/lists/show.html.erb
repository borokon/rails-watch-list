<div class="container mt-5">
  <h1><%= @list.name %></h1>
  <% @list.bookmarks.each do |bookmark| %>
    <div class='bookmark-card' >
      <div class='poster' style="background-image: linear-gradient(rgba(0,0,0,.2), rgba(0,0,0,.2)), url('<%= bookmark.movie.poster_url %>')">
      </div>
      <h2>Title: <%= bookmark.movie.title %></h2>
      <p>Overview: <%= bookmark.movie.overview %></p>
      <p>Comment: <%= bookmark.comment %></p>
    </div>
    <p><%= link_to "Delete movie", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></p>
  <% end %>
  <%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
  <br>
  <br>
  <%= link_to 'Return to homepage', lists_path %>
</div>
